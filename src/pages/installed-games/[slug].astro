---
import { type CollectionEntry, getCollection } from "astro:content";
import { type gameSchema } from "../../content/config";
import GameLayout from "../../layouts/GameLayout.astro";
import createSlug from "../../lib/createSlug"

export async function getStaticPaths() {
  const postEntries = await getCollection("game");
  return postEntries.map((entry) => ({
    params: { slug: createSlug(entry.data.title, entry.slug) },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<"game">;
}

const { entry } = Astro.props;
const post: gameSchema = entry.data;
const { Content } = await entry.render();
---

<GameLayout
  title={post.title}
  description={post.description}
  releaseDate={post.releaseDate}
  lastUpdatedDate={post.lastUpdatedDate}
  heroImage={post.heroImage}
  linuxDownload={post.linuxDownload}
  windowsDownload={post.windowsDownload}
  macDownload={post.macDownload}
  dataDownloadPath={post.dataDownloadPath}
  dataDownloadFile={post.dataDownloadFile}
  romInstallPath={post.romInstallPath}
  romInstallDir={post.romInstallDir}
  badge={post.badge}
  tags={post.tags}
>
  <Content />
</GameLayout>
